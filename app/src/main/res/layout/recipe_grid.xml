<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#fefcff"
    android:id="@+id/background"

    tools:context=".RecipeGrid">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/recipe"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/recipe1"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:gravity="center"
        android:layout_marginStart="10sp"
        android:text="recipe 1"
        android:layout_below="@+id/textView"
        android:layout_marginTop="30sp" />

    <ImageView
        android:id="@+id/recipe2"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:gravity="center"
        android:layout_marginEnd="10sp"
        android:layout_alignTop="@+id/recipe1"
        android:layout_alignEnd="@+id/textView" />
        <!-- android:src="@drawable/s" -->


    <Button
        android:id="@+id/recipe3"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:gravity="center"
        android:layout_marginEnd="10sp"
        android:text="recipe 3"
        android:layout_alignStart="@+id/recipe1"
        android:layout_below="@+id/recipe1" />

    <Button
        android:id="@+id/recipe4"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:gravity="center"
        android:layout_marginEnd="10sp"
        android:text="recipe 4"
        android:layout_below="@+id/recipe2"
        android:layout_alignStart="@+id/recipe2" />




</RelativeLayout>
